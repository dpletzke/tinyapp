<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
        <form class="nav-item form-inline" style="justify-self: end;" action="/logout" method="POST">
          <label for="login" style="color:blanchedalmond; margin-right: 0.5em;">Logged in as: <%= username %></label>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      <% } else { %>
        <form class="form-inline" action="/login" method="POST">
          <label class="sr-only" for="login">Enter username here</label>
          <input class="form-control" type="text" name="username" placeholder="Enter Username" style="width: 200px; margin-right: 0.5em">
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      <% } %>
      </div>
    </div>
  </nav>
</header>